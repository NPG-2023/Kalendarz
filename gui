from tkinter import *
from tkcalendar import *
from tkinter import messagebox

root = Tk()
root.geometry("600x400")

cal = Calendar(root, selectmode="day", year=2023, month=4, day=16)
cal.pack(pady=10, fill="both", expand=True)

def grab_date():
    my_label.config(text="" + cal.get_date())

    # dodaj pole tekstowe do wprowadzenia opisu wydarzenia
    event_desc_label = Label(root, text="Opis wydarzenia:")
    event_desc_label.pack(pady=10)

    event_desc_entry = Entry(root, width=50)
    event_desc_entry.pack()

    def save_event():
        event_date = cal.get_date()  #dodaj wydarzenie
        event_desc = event_desc_entry.get()

        messagebox.showinfo(title="Wydarzenie zapisane", message=f"Zapisano wydarzenie: '{event_desc}' w dniu {event_date}")

        event_desc_entry.delete(0, END)

    save_button = Button(root, text="Zapisz", command=save_event)
    save_button.pack(pady=10)

my_button = Button(root, text="Dodaj Wydarzenie", command=grab_date)
my_button.pack(pady=0)

my_label = Label(root, text="")
my_label.pack(pady=20)

root.mainloop()
